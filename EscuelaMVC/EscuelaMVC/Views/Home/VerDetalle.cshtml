
@{
    ViewBag.Title = "Catalogo de Alumnos";
    EscuelaMVC.Models.Alumno Datos = ViewBag.Datos;
    //EscuelaMVC.ViewModel.AlumnoViewModel.listarContenido();
}

<div class="modal-header">
    <h5 class="modal-title">Detalles de @Datos.sNombre @Datos.sApellido</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">
    <div class="container">
        <div class="form-group row">
            <label for="Imagen" class="col-md-3 col-form-label text-capitalize">Imagen</label>
            <div class="col-md-9">
                <!--<img src="@Datos.sImagen" class="img-fluid img-thumbnail" width="180px" alt="@Datos.sNombre @Datos.sApellido"/>-->
                <img src='@Url.Action("getImage")' class="img-fluid img-thumbnail" width="180px" alt="@Datos.sNombre @Datos.sApellido" />
            </div>
        </div>

        <div class="form-group row">
            <label for="Nombre" class="col-md-3 col-form-label text-capitalize">Nombre</label>
            <div class="col-md-9">
                <input class="form-control" type="text" value="@Datos.sNombre @Datos.sApellido" id="Nombre" readonly>
            </div>
        </div>

        <div class="form-group row">
            <label for="Grupo" class="col-md-3 col-form-label text-capitalize">Grupo</label>
            <div class="col-md-9">
                <input class="form-control" type="text" value="@Datos.sGrupo" id="Grupo" readonly>
            </div>
         </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
</div>